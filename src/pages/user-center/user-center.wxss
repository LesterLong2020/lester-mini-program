/* pages/user-center/user-center.wxss */

page {
  height: calc(100% - 100rpx);
}

.container {
  position: relative;
}

.container .bg-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.container .user-wrap {
  display: flex;
  align-items: center;
  margin-top: 100rpx;
  width: 100%;
  height: 202rpx;
  padding: 0 20rpx;
  position: relative;
  z-index: 10;
  box-sizing: border-box;
}

.user-wrap .user-bg {
  position: absolute;
  width: calc(100% - 40rpx);
  height: 100%;
  left: 20rpx;
  border-radius: 12rpx 12rpx 0 0;
}

.user-wrap .user-content {
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 15;
}

.user-content .get-btn {
  display: inline-flex;
  align-items: center;
  width: fit-content;
  min-height: 60rpx;
  padding: 0 20rpx;
  background: linear-gradient(182deg, #FFDCA5 0%, #E9C181 100%);
  font-size: 24rpx;
  border-radius: 50rpx;
}

.user-content .user-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.user-content .user-info {
  margin-left: 30rpx;
}

.user-info .user-name {
  line-height: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #F3D79F;
}

.user-info .user-addr {
  line-height: 36rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #ffffff;
}

.container .content-wrap {
  position: relative;
  padding: 30rpx 20rpx 0;
  z-index: 10;
  box-sizing: border-box;
}

.cell-wrap .weui-cells {
  margin: 0;
}

.cell-wrap .weui-cells::before, .cell-wrap .weui-cells::after {
  display: none;
}

.cell-item .cell-icon {
  width: 56rpx;
  height: 56rpx;
}

.cell-item .weui-cell {
  height: 112rpx;
  padding: 0;
  background: linear-gradient(180deg, #ddceb6f1 0%, #f1d7ae 100%);
}

.cell-item .weui-cell::before {
  left: 0;
}

.cell-item .weui-cell__hd {
  width: 56rpx;
  height: 56rpx;
  margin: 0 20rpx;
}

.cell-item .weui-cell__bd {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.cell-item .weui-cell__ft {
  padding-right: 32rpx;
  font-size: 30rpx;
  color: #666666;
}

.cell-item .weui-cell__ft::after {
  width: 30rpx;
  height: 54rpx;
  margin: 0;
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
}
